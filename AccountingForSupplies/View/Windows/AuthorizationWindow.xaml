<Window x:Class="AccountingForSupplies.View.Windows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountingForSupplies.View.Windows"
        mc:Ignorable="d"
        Title="Авторизация" MinHeight="300" MinWidth="500" Height="300" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Text="Логин" HorizontalAlignment="Right"/>
        <TextBlock Grid.Row="2" Text="Пароль" HorizontalAlignment="Right"/>
        <TextBox Name="LoginTbx" Grid.Row="0" Grid.Column="2" />
        <PasswordBox Name="PasswordPb" Grid.Row="2" Grid.Column="2" />
        <Button Name="EnterBtn" Grid.Row="6" Grid.Column="2" Content="Войти" Click="EnterBtn_Click"/>
    </Grid>
</Window>
