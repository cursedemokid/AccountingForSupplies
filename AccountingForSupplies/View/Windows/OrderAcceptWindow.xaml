<Window x:Class="AccountingForSupplies.View.Windows.OrderAcceptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountingForSupplies.View.Windows"
        mc:Ignorable="d"
        Title="Подтверждение заказа" MinHeight="450" MinWidth="800" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Клиент"/>
        <TextBlock Grid.Row="2" Text="Адрес"/>
        <ComboBox Name="ClientCmb" Grid.Column="2" DisplayMemberPath="FullName" SelectedValuePath="Id"/>
        <TextBox Name="AddressTbx" Grid.Row="2" Grid.Column="2"/>
        <Button Name="AcceptOrderBtn" Grid.Row="4" Grid.ColumnSpan="3" HorizontalAlignment="Center" Content="Подтвердить заказ" Click="AcceptOrderBtn_Click"/>
    </Grid>
</Window>
