<Page x:Class="AccountingForSupplies.View.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AccountingForSupplies.View.Pages"
      mc:Ignorable="d" 
            d:DesignHeight="754" d:DesignWidth="1560"
Title="Страница заказов">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <GroupBox Header="Поиск по названию">
                <TextBox Name="NameFindTbx" TextChanged="NameFindTbx_TextChanged"/>
            </GroupBox>
            <GroupBox Grid.Column="2" Header="По дате заказа:" >
                <DatePicker Name="FilterByDateDp" SelectedDateChanged="FilterByDateDp_SelectedDateChanged"/>
            </GroupBox>
            <Button Name="AddEditProductBtn" Grid.Column="6" Content="Добавить товар" Click="AddEditProductBtn_Click"/>
            <Button Name="DeleteProductBtn" Grid.Column="8" Content="Удалить" Click="DeleteProductBtn_Click"/>
        </Grid>
        <ListView Name="ProductsLv" Grid.Row="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Дата создания" DisplayMemberBinding="{Binding Date, StringFormat=dd.MM.yyyy HH:mm}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
