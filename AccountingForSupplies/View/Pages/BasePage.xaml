<Page x:Class="AccountingForSupplies.View.Pages.BasePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AccountingForSupplies.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="754" d:DesignWidth="1560"
      Title="Справочник">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Button Name="EmployeeBtn" Grid.Column="0" Content="Сотрудники" Click="EmployeeBtn_Click"/>
            <Button Name="ClientBtn" Grid.Column="2" Content="Клиенты" Click="ClientBtn_Click"/> 
            <Button Name="CityBtn" Grid.Column="4" Content="Города" Click="CityBtn_Click"/>
            <Button Name="CompanyBtn" Grid.Column="6" Content="Компании" Click="CompanyBtn_Click"/>
        </Grid>
        <Frame Grid.Row="2" Name="AdministratorFrame"/>
    </Grid>
</Page>
